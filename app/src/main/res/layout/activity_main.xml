<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonToSecond"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Слово с Картинкой"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/buttonToThird"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Пропуск в предложении"
        app:layout_constraintEnd_toEndOf="@+id/buttonToSecond"
        app:layout_constraintStart_toStartOf="@+id/buttonToSecond"
        app:layout_constraintTop_toBottomOf="@+id/buttonToSecond" />

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Итальянский для фанатов Мусолини"
        android:textColor="#3A3737"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="286dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonToSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeader"
        app:srcCompat="@drawable/jenya_mainpage" />
</androidx.constraintlayout.widget.ConstraintLayout>